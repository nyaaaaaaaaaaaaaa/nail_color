<div class = "container">
  <div class = "row">
    <div class = "col-md-10 py-3">
      <h4>投稿一覧（全<%= Item.count %>件）</h4>
    </div>
  </div>
  <div class = "row">
    <% @items.each do |item| %>
      <div class = "col-md-2 py-3">
      <% if item.image.attached? %>
      <%= link_to admin_item_path(item) do %>
        <%= image_tag item.image, size: "90x120" %>
      <% end %>
      <% else %>
      <%= link_to admin_item_path(item) do %>
        <%= image_tag 'no_image', size: "90x120" %>
      <% end %>
      <% end %></br>
      <%= item.created_at.strftime('%Y/%m/%d') %></br>
      ♥<%= item.favorites.count %> いいね</br>
      <%= item.customer.name %>
      </div>
    <% end %>
  </div>
</div>
<div class = "d-flex justify-content-center">
  <%= paginate @items %>
</div>