<p id = "notice"></p>
<div class = "container">
  <div class = "row">
    <div class = "col-md-1 py-3 mx-auto"></div>
    <div class = "col-md-10 py-3 mx-auto">
      <h4>新規投稿</h4>
    </div>
    <div class = "col-md-1 py-3 mx-auto"></div>
  </div>
  <%= form_with model: Item.new, url: items_path do |f| %>
  <div class="field">
    <div class = "row">
      <div class = "col-md-3 py-3 mx-auto"></div>
      <div class = "col-md-3 py-3 mx-auto"><%= f.label :投稿画像 %></div>
      <div class = "col-md-3 py-3 mx-auto"><%= f.file_field :image, accept: "image/*" %></div>
      <div class = "col-md-3 py-3 mx-auto"></div>
    </div>
  </div>
  <div class="field">
    <div class = "row">
      <div class = "col-md-3 py-3 mx-auto"></div>
      <div class = "col-md-3 py-3 mx-auto"><%= f.label :商品名 %></div>
      <div class = "col-md-3 py-3 mx-auto"><%= f.text_field :name, size: "40×20" %></div>
      <div class = "col-md-3 py-3 mx-auto"></div>
    </div>
  </div>
  <div class="field">
    <div class = "row">
      <div class = "col-md-3 py-3 mx-auto"></div>
      <div class = "col-md-3 py-3 mx-auto"><%= f.label :タグ %></div>
      <div class = "col-md-3 py-3 mx-auto">
        <%= f.collection_check_boxes(:tag_id, Tag.all, :id, :name, include_hidden: false) do |tag| %>
        <div class='form-check'>
          <%= tag.label class: 'form-check-label' do %>
          <%= tag.check_box class: 'form-check-input' %>
          <%= tag.text %>
          <% end %>
        </div>
        <% end %>
        ※一つを選んでください
      </div>
      <div class = "col-md-3 py-3 mx-auto"></div>
      <div class = "col-md-3 py-3 mx-auto"></div>
    </div>
  </div>
  <div class="field">
    <div class = "row">
      <div class = "col-md-3 py-3 mx-auto"></div>
      <div class = "col-md-3 py-3 mx-auto"><%= f.label :商品説明 %></div>
      <div class = "col-md-3 py-3 mx-auto"><%= f.text_area :introduction, size: "43×8" %></div>
      <div class = "col-md-3 py-3 mx-auto"></div>
    </div>
  </div>
  <p style = "line-height:2rem"></p>
  <div class="actions">
    <div class = "row">
      <div class = "col-md-5"></div>
      <div class = "col-md-2"><%= f.submit "新規投稿", class: "btn btn-sm btn-warning btn-text-light" %></div>
      <div class = "col-md-5"></div>
    </div>
  </div>
  <% end %>
</div>