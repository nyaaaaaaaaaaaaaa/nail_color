<p id = "notice"></p>
<div class = "container">
  <div class = "row">
    <div class = "col-md-1 py-3"></div>
      <div class = "col-md-8 py-3">
        <h4>投稿履歴一覧（全<%= current_customer.items.count %>件）</h4>
      </div>
  </div>
  <div class = "row">
  <% current_customer.items.each do |item| %>
    <div class = "col-md-3 py-3">
      <% if item.image.attached? %>
      <%= link_to edit_item_path(item) do %>
        <%= image_tag item.image, size: "90x120" %>
      <% end %>
      <% else %>
      <%= link_to edit_item_path(item) do %>
        <%= image_tag 'no_image', size: "90x120" %>
      <% end %>
      <% end %></br>
      <%= item.created_at.strftime('%Y/%m/%d') %></br>
      ♥<%= item.favorites.count %> いいね</br>
      <%= item.customer.name %>
    </div>
  <% end %>
  </div>
</div>