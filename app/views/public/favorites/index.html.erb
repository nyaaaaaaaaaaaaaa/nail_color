<p id = "notice"></p>
<div class = "container">
  <div class = "row">
    <div class = "col-md-12 py-3">
      <div class = "col-md-2 py-3"></div>
      <div class = "col-md-8 py-3">
        <h4>いいね一覧（全<%= Favorite.count %>件）</h4>
      </div>
      <div class = "col-md-2 py-3"></div>
        <div class = "col-md-10 py-3">
        <div class = "row">
        <% @my_favorite_item.each do |item| %>
          <div class = "col-md-3 py-3">
            <% if item.image.attached? %>
            <%= link_to item_path(item) do %>
              <%= image_tag item.image, size: "90x120" %>
            <% end %>
            <% else %>
            <%= link_to item_path(item) do %>
              <%= image_tag 'no_image', size: "90x120" %>
            <% end %>
            <% end %></br>
            <%= item.created_at.strftime('%Y/%m/%d') %></br>
            ♥<%= item.favorites.count %> いいね</br>
            <%= item.customer.name %>
          </div>
        <% end %>
        </div>
        </div>
    </div>
  </div>
</div>
<div class = "d-flex justify-content-center">
  <%= paginate @my_favorite_item %>
</div>